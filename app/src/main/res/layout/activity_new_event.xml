<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.sms.partyview.activities.NewEventActivity">

    <LinearLayout
            android:id="@+id/llName"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        <TextView
                android:id="@+id/tvNameLabel"
                android:text="@string/label_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <EditText
                android:id="@+id/etEventName"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/llDate"
            android:layout_below="@+id/llName"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" >

        <TextView
                android:id="@+id/tvDateLabel"
                android:text="@string/label_event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

        <TextView
                android:id="@+id/tvDate"
                android:hint="@string/hint_event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"/>

        <ImageButton
                android:id="@+id/btnDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_calendar"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:onClick="showDatePicker"/>
    </LinearLayout>


    <LinearLayout
            android:id="@+id/llTime"
            android:layout_below="@+id/llDate"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" >

        <TextView
                android:id="@+id/tvTimeLabel"
                android:text="@string/label_event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

        <TextView
                android:id="@+id/tvTime"
                android:hint="@string/hint_event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"/>

        <ImageButton
                android:id="@+id/btnTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_clock"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:onClick="showTimePicker"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/llLocation"
            android:layout_below="@+id/llTime"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" >

        <TextView
                android:id="@+id/tvLocationLabel"
                android:text="@string/label_event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"/>

        <EditText
                android:id="@+id/etEventLocation"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:textSize="12sp"/>

    </LinearLayout>


    <LinearLayout
            android:id="@+id/llDescription"
            android:layout_below="@+id/llLocation"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp">

        <TextView
                android:id="@+id/tvDescriptionLabel"
                android:text="@string/label_event_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/etEventDescription"
                android:layout_marginLeft="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textAutoCorrect"
                android:ems="10"
                android:minLines="2"
                android:maxLines="2"
                android:layout_marginTop="5dp"
                android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/llInvites"
            android:layout_below="@+id/llDescription"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp">

        <TextView
                android:id="@+id/tvInvitesLabel"
                android:text="@string/label_event_invites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"/>

        <EditText
                android:id="@+id/etEventInvites"
                android:layout_marginLeft="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textEmailAddress"
                android:ems="10"
                android:minLines="2"
                android:maxLines="2"
                android:textSize="12sp"/>

    </LinearLayout>

    <Button
            android:id="@+id/btnCreateEvent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llInvites"
            android:text="@string/btn_label_create_event"
            android:onClick="createEvent"/>

</RelativeLayout>
