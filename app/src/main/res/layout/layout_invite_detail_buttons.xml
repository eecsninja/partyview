<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:id="@+id/btnAcceptInvite"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/accept_invite"
            android:onClick="onAcceptInvite"
            android:layout_weight=".5"
            android:background="@drawable/event_detail_background"/>
    <Button
            android:id="@+id/btnRejectInvite"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/reject_invite"
            android:onClick="onRejectInvite"
            android:layout_weight=".5"
            android:background="@drawable/event_detail_background"/>
</LinearLayout>